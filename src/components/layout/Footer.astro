---
import Icon from '../ui/Icon.astro';
import { navigation, siteConfig } from '../../data/site.js';
import { url } from '../../utils/url.js';
---

<footer class="bg-w4s-navy text-white">
  <!-- Main Footer -->
  <div class="container-w4s py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href={url('/')} class="inline-block mb-4">
          <span class="text-2xl font-bold">W4S</span>
        </a>
        <p class="text-w4s-steel mb-4">
          Votre partenaire dépannage et bricolage à domicile. Artisans vérifiés, intervention rapide.
        </p>
        <div class="flex gap-4">
          {Object.entries(siteConfig.social).map(([name, url]) => (
            <a 
              href={url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-w4s-steel hover:text-white transition-colors"
              aria-label={`Suivez-nous sur ${name}`}
            >
              <Icon name="external-link" size={20} />
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold mb-4">Services</h3>
        <ul class="space-y-2">
          {navigation.footer.services.map((item) => (
            <li>
              <a href={url(item.href)} class="text-w4s-steel hover:text-white transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Informations -->
      <div>
        <h3 class="font-semibold mb-4">Informations</h3>
        <ul class="space-y-2">
          {navigation.footer.info.map((item) => (
            <li>
              <a href={url(item.href)} class="text-w4s-steel hover:text-white transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-semibold mb-4">Contact</h3>
        <ul class="space-y-3">
          <li>
            <a 
              href={`tel:${siteConfig.contact.phoneFormatted}`}
              class="flex items-center gap-2 text-w4s-steel hover:text-white transition-colors"
            >
              <Icon name="phone" size={18} />
              {siteConfig.contact.phone}
            </a>
          </li>
          <li>
            <a 
              href={`mailto:${siteConfig.contact.email}`}
              class="flex items-center gap-2 text-w4s-steel hover:text-white transition-colors"
            >
              <Icon name="mail" size={18} />
              {siteConfig.contact.email}
            </a>
          </li>
          <li class="flex items-start gap-2 text-w4s-steel">
            <Icon name="map-pin" size={18} class="flex-shrink-0 mt-1" />
            <span>
              {siteConfig.contact.address.city}<br/>
              {siteConfig.contact.address.region}
            </span>
          </li>
          <li class="flex items-center gap-2 text-w4s-steel">
            <Icon name="clock" size={18} />
            <span>Urgences : {siteConfig.hours.emergency}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Emergency Band -->
  <div class="bg-w4s-urgent">
    <div class="container-w4s py-4">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-center">
        <span class="font-medium">Urgence 24h/24 :</span>
        <a 
          href={`tel:${siteConfig.contact.phoneFormatted}`}
          class="font-bold text-lg hover:underline"
        >
          {siteConfig.contact.phone}
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="border-t border-white/10">
    <div class="container-w4s py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-small text-w4s-steel">
        <p>© {new Date().getFullYear()} W4S. Tous droits réservés.</p>
        <nav class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
          {navigation.footer.legal.map((item) => (
            <a href={url(item.href)} class="hover:text-white transition-colors">
              {item.name}
            </a>
          ))}
          <a href={url('/sitemap.xml')} class="hover:text-white transition-colors">
            Plan du site
          </a>
        </nav>
      </div>
    </div>
  </div>
</footer>
