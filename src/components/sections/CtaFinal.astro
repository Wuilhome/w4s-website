---
import Button from '../ui/Button.astro';
import Icon from '../ui/Icon.astro';
import { url } from '../../utils/url.js';
---

<section class="section bg-gradient-to-r from-w4s-accent via-blue-600 to-w4s-accent bg-[length:200%_100%] animate-gradient relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute inset-0 -z-10" aria-hidden="true">
    <!-- Floating shapes -->
    <div class="absolute top-10 left-[10%] w-20 h-20 bg-white/10 rounded-full blur-xl floating-element"></div>
    <div class="absolute bottom-10 right-[15%] w-32 h-32 bg-white/10 rounded-full blur-xl floating-element-delayed"></div>
    <div class="absolute top-1/2 left-[60%] w-16 h-16 bg-white/5 rounded-lg rotate-45 floating-element-slow"></div>

    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.05)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
  </div>

  <div class="container-w4s relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Icon -->
      <div class="scroll-animate mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-sm rounded-2xl shadow-lg">
          <Icon name="zap" size={40} class="text-white" />
        </div>
      </div>

      <!-- Heading -->
      <h2 class="scroll-animate stagger-1 text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-6 text-balance">
        Prêt à simplifier votre quotidien ?
      </h2>

      <p class="scroll-animate stagger-2 text-lg md:text-xl text-white/90 mb-10 max-w-xl mx-auto">
        Décrivez votre besoin, on s'occupe du reste. Devis gratuit en 30 minutes.
      </p>

      <!-- CTAs -->
      <div class="scroll-animate stagger-3 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href={url('/contact')}
          class="group inline-flex items-center gap-2 px-8 py-4 bg-white text-w4s-accent font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105"
        >
          <span>Demander une intervention</span>
          <Icon name="arrow-right" size={20} class="transition-transform group-hover:translate-x-1" />
        </a>
        <a
          href={`tel:+33600000000`}
          class="group inline-flex items-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300"
        >
          <Icon name="phone" size={20} />
          <span>Nous appeler</span>
        </a>
      </div>

      <!-- Trust badges -->
      <div class="scroll-animate stagger-4 mt-12 flex flex-wrap items-center justify-center gap-6 text-white/80">
        <span class="flex items-center gap-2">
          <Icon name="check" size={18} />
          Réponse en 30 min
        </span>
        <span class="flex items-center gap-2">
          <Icon name="check" size={18} />
          Devis gratuit
        </span>
        <span class="flex items-center gap-2">
          <Icon name="check" size={18} />
          Sans engagement
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  .animate-gradient {
    animation: gradient 8s ease infinite;
  }
</style>
