---
import Icon from '../ui/Icon.astro';
import { siteConfig } from '../../data/site.js';

const iconColors = [
  'from-green-400 to-green-500',
  'from-blue-400 to-blue-500',
  'from-purple-400 to-purple-500',
  'from-orange-400 to-orange-500',
  'from-pink-400 to-pink-500',
  'from-cyan-400 to-cyan-500'
];
---

<section class="section bg-w4s-navy relative overflow-hidden">
  <!-- Decorative background -->
  <div class="absolute inset-0 -z-10" aria-hidden="true">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-w4s-accent/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <div class="container-w4s relative z-10">
    <!-- Header -->
    <div class="text-center max-w-2xl mx-auto mb-16 scroll-animate">
      <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 text-white rounded-full text-small font-medium mb-6 backdrop-blur-sm">
        <Icon name="shield" size={16} />
        Nos Engagements
      </span>
      <h2 class="text-h2 md:text-4xl font-bold text-white mb-4">
        Pourquoi choisir <span class="text-w4s-accent">W4S</span> ?
      </h2>
      <p class="text-body-lg text-white/70">
        Des engagements concrets pour votre tranquillité.
      </p>
    </div>

    <!-- Promises Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {siteConfig.promises.map((promise, index) => (
        <div class={`scroll-animate stagger-${index + 1} group`}>
          <div class="glass-dark rounded-2xl p-6 h-full hover:bg-white/10 transition-all duration-300 hover:scale-[1.02] hover:-translate-y-1">
            <div class="flex gap-4">
              <!-- Icon with gradient -->
              <div class="flex-shrink-0">
                <div class="relative">
                  <div class={`absolute inset-0 bg-gradient-to-br ${iconColors[index % iconColors.length]} rounded-xl blur-lg opacity-0 group-hover:opacity-50 transition-opacity duration-300`}></div>
                  <div class={`relative w-14 h-14 bg-gradient-to-br ${iconColors[index % iconColors.length]} rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                    <Icon name={promise.icon} size={26} class="text-white" />
                  </div>
                </div>
              </div>

              <!-- Content -->
              <div>
                <h3 class="text-h4 font-bold text-white mb-2 group-hover:text-w4s-accent transition-colors">
                  {promise.title}
                </h3>
                <p class="text-body text-white/70 leading-relaxed">
                  {promise.description}
                </p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust indicators -->
    <div class="mt-16 pt-12 border-t border-white/10">
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16">
        <div class="scroll-animate stagger-1 text-center">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 counter" data-target="100" data-suffix="%">0%</div>
          <p class="text-white/60 text-small">Satisfaction client</p>
        </div>
        <div class="scroll-animate stagger-2 text-center">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">24/7</div>
          <p class="text-white/60 text-small">Disponibilité urgence</p>
        </div>
        <div class="scroll-animate stagger-3 text-center">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 counter" data-target="30" data-suffix=" min">0 min</div>
          <p class="text-white/60 text-small">Temps de réponse moyen</p>
        </div>
      </div>
    </div>
  </div>
</section>
