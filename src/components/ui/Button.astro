---
export interface Props {
  variant?: 'primary' | 'secondary' | 'urgent' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit';
  fullWidth?: boolean;
  disabled?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  fullWidth = false,
  disabled = false,
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed shadow-button';

const variants = {
  primary: 'bg-w4s-navy text-white hover:bg-w4s-navy-light focus:ring-w4s-navy',
  secondary: 'bg-w4s-accent text-white hover:bg-w4s-accent-hover focus:ring-w4s-accent',
  urgent: 'bg-w4s-urgent text-white hover:bg-w4s-urgent-hover focus:ring-w4s-urgent animate-pulse-slow hover:animate-none',
  ghost: 'bg-transparent text-w4s-navy hover:bg-w4s-concrete/50 focus:ring-w4s-navy shadow-none',
  outline: 'bg-transparent text-w4s-navy border-2 border-w4s-navy hover:bg-w4s-navy hover:text-white focus:ring-w4s-navy shadow-none'
};

const sizes = {
  sm: 'px-4 py-2 text-small gap-1.5',
  md: 'px-6 py-3 text-body gap-2',
  lg: 'px-8 py-4 text-body-lg gap-2.5'
};

const classes = [
  baseStyles,
  variants[variant],
  sizes[size],
  fullWidth ? 'w-full' : '',
  className
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} disabled={disabled} class={classes}>
    <slot />
  </button>
)}
