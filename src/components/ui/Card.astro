---
export interface Props {
  href?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  href,
  padding = 'md',
  hover = true,
  class: className = ''
} = Astro.props;

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = [
  'card',
  paddings[padding],
  hover ? 'hover:shadow-card-hover' : '',
  href ? 'cursor-pointer' : '',
  className
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'div';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
