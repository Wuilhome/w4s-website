---
export interface Props {
  type?: 'text' | 'email' | 'tel' | 'number' | 'password';
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  autocomplete?: string;
  class?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder = '',
  required = false,
  disabled = false,
  autocomplete,
  class: className = ''
} = Astro.props;

const inputId = `input-${name}`;
---

<div class={`space-y-1.5 ${className}`}>
  <label for={inputId} class="block text-small font-medium text-w4s-navy">
    {label}
    {required && <span class="text-w4s-urgent ml-0.5">*</span>}
  </label>
  <input
    type={type}
    id={inputId}
    name={name}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    autocomplete={autocomplete}
    class="w-full px-4 py-3 border border-w4s-concrete rounded-xl text-w4s-navy placeholder:text-w4s-steel focus:outline-none focus:ring-2 focus:ring-w4s-accent focus:border-transparent transition-all duration-200 disabled:bg-w4s-concrete/30 disabled:cursor-not-allowed"
  />
</div>
